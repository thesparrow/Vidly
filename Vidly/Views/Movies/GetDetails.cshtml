@using Vidly.Models
@model Movie

@{
    ViewBag.Title = "GetMovieDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Get Movie Details</title>
</head>
@Html.Partial("_NavView")
<body>
<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.ToShortDateString()</li>
    <li>Date Added: @Model.DateAdded.ToShortDateString()</li>
    <li>Number in Stock: @Model.InStock</li>
</ul>


</body>
</html>